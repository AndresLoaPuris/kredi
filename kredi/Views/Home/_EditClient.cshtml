@model kredi.Models.LinesOfCredit
@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">
        <label class="small mb-1" for="inputEmailAddress">Nombre completo</label>
        @Html.EditorFor(model => model.customer, new { htmlAttributes = new { @class = "form-control form-control-solid py-4", @type = "text" } })
        @Html.ValidationMessageFor(model => model.customer, "", new { @class = "text-danger" })
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <!-- Form Group (first name)-->
            <div class="form-group">
                <label class="small mb-1" for="inputFirstName">Linea de Credito</label>
                @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control form-control-solid py-4", @type = "number", @step = "any" } })
                @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <!-- Form Group (last name)-->
            <div class="form-group">
                <label class="small mb-1" for="inputLastName">Moneda</label>
                @Html.DropDownList("currency", null, htmlAttributes: new { @class = "form-control form-control-solid", @style = "color: black;" })
                @Html.ValidationMessageFor(model => model.currency, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <!-- Form Group (email address)            -->
    <div class="form-group">
        <label class="small mb-1" for="inputEmailAddress">Tipo de tasa</label>
        @Html.DropDownList("rateType", null, htmlAttributes: new { @class = "form-control form-control-solid", @style = "color: black;" })
        @Html.ValidationMessageFor(model => model.rateType, "", new { @class = "text-danger" })
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <!-- Form Group (first name)-->
            <div class="form-group">
                <label class="small mb-1" for="inputFirstName">Valor ( % )</label>
                @Html.EditorFor(model => model.rateValue, new { htmlAttributes = new { @class = "form-control form-control-solid py-4", @type = "number", @step = "any" } })
                @Html.ValidationMessageFor(model => model.rateValue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <!-- Form Group (last name)-->
            <div class="form-group">
                <label class="small mb-1" for="inputLastName">Capitalizacion</label>
                @Html.DropDownList("capitalization", null, htmlAttributes: new { @class = "form-control form-control-solid", @style = "color: black;" })
                @Html.ValidationMessageFor(model => model.capitalization, "", new { @class = "text-danger" })
            </div>
        </div>
        
    </div>

